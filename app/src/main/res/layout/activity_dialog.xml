<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="240dp"
    android:background="@drawable/common_corner_10dp_white_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="提示"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="日期 2016-12-26 13:19"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/data_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="收缩压70.0\n舒张压60.0\n心率150.0"
        android:textColor="#000000"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#aab2bd"></View>

    <com.example.wei.usb_demo.activity.StateButton
        android:id="@+id/ok"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="#ffffff"
        app:normalBackgroundColor="#4a89dc"
        app:pressedBackgroundColor="#a14a89dc"
        app:radius="1dp"
        app:round="true"
        app:unableBackgroundColor="@android:color/holo_red_light" />
</LinearLayout>