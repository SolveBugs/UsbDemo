<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    tools:context="com.example.wei.usb_demo.activity.settings.WifiSettingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/RGB_FFFFFF"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_size_dp_16"
            android:text="无线局域网" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/wifi_switcher" />

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/list_view"
        android:layout_weight="1"
        android:divider="@color/RGB_FFFFFF"
        android:dividerHeight="1px" />

</LinearLayout>
