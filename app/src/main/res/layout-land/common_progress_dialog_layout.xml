<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_progress_dialog_background"
        android:orientation="vertical">

        <!--android:layout_width="@dimen/dialog_width"-->

        <ImageView
            android:id="@+id/progress_webview_id"
            android:layout_width="@dimen/common_progress_dialog_image_width"
            android:layout_height="@dimen/common_progress_dialog_image_width"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="9dp" />

        <TextView
            android:id="@+id/progress_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxHeight="@dimen/common_progress_max_height"
            android:maxWidth="@dimen/common_progress_max_width"
            android:padding="@dimen/dp_10"
            android:text="@string/loading"
            android:textColor="@color/RGB_FFFFFF" />

    </LinearLayout>


</LinearLayout>